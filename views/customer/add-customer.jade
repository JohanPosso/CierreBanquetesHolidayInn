extends ../layout/base 
block content 

	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Customer
				.box-tools.pull-right
					button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form' method='post' action='/customers/add')
					.row

						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| EVENTO
									input(type='text' value='#{EVENTO}' name='EVENTO' placeholder='Ingrese EVENTO').form-control
									.form-group
									label
										| FECHA EVENTO
									input(type='date' value='#{FECHAEVENTO}' name='FECHAEVENTO' placeholder='Ingrese FECHA EVENTO').form-control
								.form-group
									label
										| PM
									input(type='text' value='#{PM}' name='PM' placeholder='Ingrese PM').form-control
								.form-group
									label
										| SALON
									input(type='text' name='SALON' placeholder='Ingrese SALON').form-control
								.form-group
									label
										| ALIMENTOS
									input(type='text' value='#{ALIMENTOS}' name='ALIMENTOS' placeholder='Ingrese ALIMENTOS').form-control
								.form-group
									label
										| OTROS
									input(type='text' name='BEBIDAS' placeholder='Ingrese OTROS').form-control
								.form-group
									label
										| EQUIPOS
									input(type='text' name='EQUIPOS' placeholder='Ingrese EQUIPOS').form-control
									.form-group
									label
										| ALQUILER EQUIPOS
									input(type='text' name='ALQUILEREQUIPOS' placeholder='Ingrese ALQUILER EQUIPOS').form-control
								.form-group
									label
										| GANANCIA EQUIPOS
									input(type='text' name='GANANCIAEQUIPOS' placeholder='Ingrese ALQUILER EQUIPOS', disabled).form-control
								.form-group
									label
										| MESEROS
									input(type='text' name='MESEROS' placeholder='Ingrese MESEROS').form-control
								.form-group
									label
										| CANT MESEROS
									input(type='text' name='CANTMESEROS' placeholder='Ingrese CANTIDAD MESEROS', disabled).form-control
								.form-group
									label
										| PROPINA
									input(type='text' name='PROPINA' placeholder='Ingrese PROPINA').form-control
								.form-group
									label
										| TOTAL
									input(type='text' name='TOTAL' placeholder='Ingrese TOTAL', disabled).form-control
								.form-group
									label
										| VENDEDORA
									input(type='text' name='VENDEDORA' placeholder='Ingrese VENDEDORA').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Agregar
								a(href='/customers').btn.btn-primary.pull-right
									| Regresar